<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.0/window.xsd"
        caption="msg://browseCaption"
        class="akkount.gui.category.CategoryBrowse"
        lookupComponent="categoryTable"
        messagesPack="akkount.gui.category">
    <dsContext>
        <collectionDatasource id="categoryDs"
                              class="akkount.entity.Category"
                              view="_local">
            <query>
                <![CDATA[select e from akk$Category e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="categoryTable"
            spacing="true">
        <filter id="filter"
                datasource="categoryDs">
            <properties include=".*"/>
        </filter>
        <table id="categoryTable"
               height="100%"
               width="100%">
            <rows datasource="categoryDs"/>
            <columns>
                <column id="name"/>
                <column id="description"/>
            </columns>
            <rowsCount/>
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="categoryTable.create"/>
                <button id="editBtn"
                        action="categoryTable.edit"/>
                <button id="removeBtn"
                        action="categoryTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
