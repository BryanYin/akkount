<Context>

    <!-- Database connection -->
    <Resource
      name="jdbc/CubaDS"
      type="javax.sql.DataSource"
      maxActive="20"
      maxIdle="2"
      maxWaitMillis="5000"
      driverClassName="org.hsqldb.jdbc.JDBCDriver"
      url="jdbc:hsqldb:file:${app.home}/db/akk;shutdown=true"
      username="sa"
      password=""/>

    <!-- Switch off session serialization -->
    <Manager pathname=""/>

</Context>