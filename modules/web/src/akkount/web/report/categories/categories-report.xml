<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.0/window.xsd"
        caption="msg://caption"
        class="akkount.web.report.categories.CategoriesReport"
        messagesPack="akkount.web.report.categories">
    <dsContext>
        <collectionDatasource id="ds1"
                              class="akkount.entity.CategoryAmount"
                              datasourceClass="akkount.web.report.categories.CategoryAmountDatasource">
            <query>
                <![CDATA[select e from akk$Category e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="ds2"
                              class="akkount.entity.CategoryAmount"
                              datasourceClass="akkount.web.report.categories.CategoryAmountDatasource">
            <query>
                <![CDATA[select e from akk$Category e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="currenciesDs"
                              class="akkount.entity.Currency"
                              view="_minimal">
            <query>
                <![CDATA[select e from akk$Currency e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="mainBox"
            spacing="true">
        <hbox expand="spacer"
              spacing="true"
              width="100%">
            <label align="MIDDLE_RIGHT"
                   value="msg://period"/>
            <lookupField id="periodTypeField"
                         filterMode="NO"/>
            <label align="MIDDLE_RIGHT"
                   value="msg://currency"/>
            <lookupField id="currencyField"
                         optionsDatasource="currenciesDs"
                         required="true"
                         width="80px"/>
            <optionsGroup id="categoryTypeGroup"
                          orientation="horizontal"/>
            <label id="spacer"
                   width="100%"/>
        </hbox>
        <hbox id="mainBox"
              height="100%"
              spacing="true"
              width="100%">
            <groupBox caption="msg://period1"
                      expand="table1"
                      height="100%"
                      spacing="true">
                <hbox spacing="true">
                    <dateField id="from1"
                               resolution="DAY"/>
                    <label align="MIDDLE_LEFT"
                           value="-"/>
                    <dateField id="to1"
                               resolution="DAY"/>
                </hbox>
                <table id="table1"
                       height="100%"
                       width="100%">
                    <columns>
                        <column id="category.name"/>
                        <column id="amount"/>
                    </columns>
                    <rows datasource="ds1"/>
                </table>
            </groupBox>
            <groupBox caption="msg://period2"
                      expand="table2"
                      height="100%"
                      spacing="true">
                <hbox spacing="true">
                    <dateField id="from2"
                               resolution="DAY"/>
                    <label align="MIDDLE_LEFT"
                           value="-"/>
                    <dateField id="to2"
                               resolution="DAY"/>
                </hbox>
                <table id="table2"
                       height="100%"
                       width="100%">
                    <columns>
                        <column id="category.name"/>
                        <column id="amount"/>
                    </columns>
                    <rows datasource="ds2"/>
                </table>
            </groupBox>
        </hbox>
    </layout>
</window>
