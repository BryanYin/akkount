<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.0/window.xsd"
        caption="msg://browseCaption"
        class="akkount.web.operation.OperationBrowse"
        focusComponent="operationTable"
        lookupComponent="operationTable"
        messagesPack="akkount.web.operation">
    <dsContext>
        <collectionDatasource id="operationDs"
                              class="akkount.entity.Operation"
                              view="operation-browse">
            <query>
                <![CDATA[select e from akk$Operation e order by e.opDate desc, e.createTs desc]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="operationTable"
            spacing="true">
        <filter id="filter"
                datasource="operationDs">
            <properties include=".*"/>
        </filter>
        <table id="operationTable"
               height="100%"
               multiselect="true"
               width="100%">
            <rows datasource="operationDs"/>
            <columns>
                <column id="opType"/>
                <column id="opDate"/>
                <column id="acc1"/>
                <column id="amount1"/>
                <column id="acc2"/>
                <column id="amount2"/>
                <column id="category"/>
                <column id="comments"/>
            </columns>
            <rowsCount/>
            <actions>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createExpenseBtn"/>
                <button id="createIncomeBtn"/>
                <button id="createTransferBtn"/>
                <button id="editBtn"
                        action="operationTable.edit"/>
                <button id="removeBtn"
                        action="operationTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
